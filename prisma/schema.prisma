// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// ============================================
// UTILISATEURS & AUTHENTIFICATION
// ============================================

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String?   // Hash du mot de passe
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  memberships           OrganizationMember[]
  invitationsSent       Invitation[]
  decisions             Decision[]              @relation("DecisionCreator")
  votes                 Vote[]
  proposalVotes         ProposalVote[]
  nuancedVotes          NuancedVote[]
  comments              Comment[]
  decisionParticipants  DecisionParticipant[]
  decisionLogs          DecisionLog[]
  accounts              Account[]
  sessions              Session[]

  @@map("users")
}

// Pour NextAuth
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

// ============================================
// ORGANISATIONS
// ============================================

model Organization {
  id          String   @id @default(cuid())
  name        String
  description String?
  slug        String   @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  members        OrganizationMember[]
  nonUserMembers NonUserMember[]
  invitations    Invitation[]
  teams          Team[]
  decisions      Decision[]

  @@map("organizations")
}

model OrganizationMember {
  id             String           @id @default(cuid())
  role           String           @default("MEMBER") // OWNER, ADMIN, MEMBER
  joinedAt       DateTime         @default(now())
  userId         String
  organizationId String

  // Relations
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  teamMembers  TeamMember[]

  @@unique([userId, organizationId])
  @@map("organization_members")
}

// Membres sans compte utilisateur (ajoutés manuellement)
model NonUserMember {
  id             String   @id @default(cuid())
  firstName      String
  lastName       String
  position       String?
  organizationId String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relations
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@map("non_user_members")
}

// Invitations pour rejoindre une organisation
model Invitation {
  id             String           @id @default(cuid())
  email          String
  token          String           @unique
  firstName      String
  lastName       String
  position       String?
  role           String           @default("MEMBER") // OWNER, ADMIN, MEMBER
  status         String           @default("PENDING") // PENDING, ACCEPTED, EXPIRED, CANCELLED
  organizationId String
  invitedById    String
  expiresAt      DateTime
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt

  // Relations
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  invitedBy    User         @relation(fields: [invitedById], references: [id], onDelete: Cascade)

  @@map("invitations")
}

// ============================================
// ÉQUIPES
// ============================================

model Team {
  id             String   @id @default(cuid())
  name           String
  description    String?  
  organizationId String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relations
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  members      TeamMember[]
  decisions    Decision[]

  @@map("teams")
}

model TeamMember {
  id                   String             @id @default(cuid())
  organizationMemberId String
  teamId               String
  joinedAt             DateTime           @default(now())

  // Relations
  organizationMember OrganizationMember @relation(fields: [organizationMemberId], references: [id], onDelete: Cascade)
  team               Team               @relation(fields: [teamId], references: [id], onDelete: Cascade)

  @@unique([organizationMemberId, teamId])
  @@map("team_members")
}

// ============================================
// DÉCISIONS
// ============================================

model Decision {
  id             String         @id @default(cuid())
  title          String
  description    String
  context        String?
  decisionType   String         // CONSENSUS, CONSENT, MAJORITY, SUPERMAJORITY, WEIGHTED_VOTE, ADVISORY
  status         String         @default("DRAFT") // DRAFT, OPEN, CLOSED, IMPLEMENTED, ARCHIVED

  // Mode de vote
  votingMode     String         @default("INVITED") // INVITED (invitations) ou PUBLIC_LINK (lien URL)
  publicToken    String?        @unique // Token pour accès public si votingMode = PUBLIC_LINK

  // Pour le consensus
  initialProposal  String?      // Proposition originale (historique, immuable)
  proposal         String?      // Proposition actuelle (modifiable par le créateur)

  // Pour le vote nuancé (jugement majoritaire)
  nuancedScale        String?   // 3_LEVELS, 5_LEVELS, 7_LEVELS
  nuancedWinnerCount  Int?      // Nombre de propositions gagnantes
  nuancedSlug         String?   // Slug pour l'URL publique (si PUBLIC_LINK)

  // Résultat de la décision
  result         String?        // APPROVED, REJECTED, BLOCKED, WITHDRAWN
  resultDetails  String?
  conclusion     String?        // Conclusion rédigée par le créateur (visible dans les résultats)

  // Dates
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  startDate      DateTime?
  endDate        DateTime?
  decidedAt      DateTime?

  // Relations
  creatorId      String
  organizationId String
  teamId         String?

  creator           User                  @relation("DecisionCreator", fields: [creatorId], references: [id])
  organization      Organization          @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  team              Team?                 @relation(fields: [teamId], references: [id], onDelete: SetNull)
  votes             Vote[]
  comments          Comment[]
  tags              DecisionTag[]
  proposals         Proposal[]            // Pour vote à la majorité
  nuancedProposals  NuancedProposal[]     // Pour vote nuancé (jugement majoritaire)
  participants      DecisionParticipant[] // Qui peut voter
  logs              DecisionLog[]         // Historique des événements

  @@map("decisions")
}

// ============================================
// PROPOSITIONS (pour vote à la majorité)
// ============================================

model Proposal {
  id          String   @id @default(cuid())
  title       String
  description String?
  order       Int      // Ordre d'affichage
  decisionId  String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  decision      Decision       @relation(fields: [decisionId], references: [id], onDelete: Cascade)
  proposalVotes ProposalVote[] // Votes pour cette proposition

  @@map("proposals")
}

// ============================================
// PROPOSITIONS POUR VOTE NUANCÉ (JUGEMENT MAJORITAIRE)
// ============================================

model NuancedProposal {
  id          String   @id @default(cuid())
  title       String
  description String?
  order       Int      // Ordre d'affichage
  decisionId  String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  decision      Decision       @relation(fields: [decisionId], references: [id], onDelete: Cascade)
  nuancedVotes  NuancedVote[]  // Votes pour cette proposition

  @@map("nuanced_proposals")
}

// ============================================
// PARTICIPANTS À UNE DÉCISION
// ============================================

model DecisionParticipant {
  id             String   @id @default(cuid())
  decisionId     String

  // Participant membre de l'organisation
  userId         String?

  // Participant externe (non membre)
  externalEmail  String?
  externalName   String?
  token          String?  @unique // Token unique pour vote sans authentification
  tokenExpiresAt DateTime? // Date d'expiration du token (= endDate de la décision)

  // Comment a-t-il été invité
  invitedVia     String   // TEAM (via équipe), MANUAL (ajouté manuellement), EXTERNAL (email externe)
  teamId         String?  // Si invité via une équipe

  // A-t-il voté ?
  hasVoted       Boolean  @default(false)

  createdAt      DateTime @default(now())

  decision      Decision       @relation(fields: [decisionId], references: [id], onDelete: Cascade)
  user          User?          @relation(fields: [userId], references: [id], onDelete: Cascade)
  votes         Vote[]
  proposalVotes ProposalVote[]
  nuancedVotes  NuancedVote[]
  comments      Comment[]

  @@unique([decisionId, userId])
  @@unique([decisionId, externalEmail])
  @@map("decision_participants")
}

// ============================================
// VOTES
// ============================================

// Vote pour consensus/consent/etc (vote nuancé)
model Vote {
  id         String     @id @default(cuid())
  value      String     // Pour consensus: AGREE/DISAGREE ; Pour autres: STRONG_SUPPORT, SUPPORT, etc.
  weight     Int        @default(1) // Pour votes nuancés: -3 à +3 par exemple
  comment    String?
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  // Relations
  userId                String?  // Nullable pour les votes externes
  decisionId            String
  externalParticipantId String?  // ID du DecisionParticipant pour votes externes

  user                User?                @relation(fields: [userId], references: [id], onDelete: Cascade)
  decision            Decision             @relation(fields: [decisionId], references: [id], onDelete: Cascade)
  externalParticipant DecisionParticipant? @relation(fields: [externalParticipantId], references: [id], onDelete: Cascade)

  @@unique([userId, decisionId])
  @@unique([externalParticipantId, decisionId])
  @@map("votes")
}

// Vote pour une proposition spécifique (vote à la majorité)
model ProposalVote {
  id                    String   @id @default(cuid())
  proposalId            String
  userId                String?  // Nullable pour les votes externes
  decisionId            String
  externalParticipantId String?  // ID du DecisionParticipant pour votes externes
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  proposal            Proposal             @relation(fields: [proposalId], references: [id], onDelete: Cascade)
  user                User?                @relation(fields: [userId], references: [id])
  externalParticipant DecisionParticipant? @relation(fields: [externalParticipantId], references: [id], onDelete: Cascade)

  @@unique([userId, decisionId]) // Un utilisateur ne peut voter qu'une fois par décision
  @@unique([externalParticipantId, decisionId])
  @@map("proposal_votes")
}

// Vote nuancé pour une proposition (jugement majoritaire)
model NuancedVote {
  id                    String   @id @default(cuid())
  proposalId            String
  mention               String   // La mention attribuée (EXCELLENT, GOOD, etc.)
  userId                String?  // Nullable pour les votes externes
  decisionId            String
  externalParticipantId String?  // ID du DecisionParticipant pour votes externes
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  proposal            NuancedProposal      @relation(fields: [proposalId], references: [id], onDelete: Cascade)
  user                User?                @relation(fields: [userId], references: [id])
  externalParticipant DecisionParticipant? @relation(fields: [externalParticipantId], references: [id], onDelete: Cascade)

  @@unique([userId, proposalId]) // Un utilisateur ne peut voter qu'une fois par proposition
  @@unique([externalParticipantId, proposalId])
  @@map("nuanced_votes")
}

// ============================================
// COMMENTAIRES & DISCUSSIONS
// ============================================

model Comment {
  id                    String   @id @default(cuid())
  content               String
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  // Relations
  userId                String?  // Nullable pour les commentaires externes
  decisionId            String
  parentId              String?  // Pour les réponses
  externalParticipantId String?  // ID du DecisionParticipant pour commentaires externes

  user                User?                @relation(fields: [userId], references: [id], onDelete: Cascade)
  decision            Decision             @relation(fields: [decisionId], references: [id], onDelete: Cascade)
  parent              Comment?             @relation("CommentReplies", fields: [parentId], references: [id])
  replies             Comment[]            @relation("CommentReplies")
  externalParticipant DecisionParticipant? @relation(fields: [externalParticipantId], references: [id], onDelete: Cascade)

  @@map("comments")
}

// ============================================
// TAGS / CATÉGORIES
// ============================================

model Tag {
  id        String   @id @default(cuid())
  name      String
  color     String   @default("#3B82F6")
  createdAt DateTime @default(now())

  decisions DecisionTag[]

  @@map("tags")
}

model DecisionTag {
  decisionId String
  tagId      String

  decision Decision @relation(fields: [decisionId], references: [id], onDelete: Cascade)
  tag      Tag      @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([decisionId, tagId])
  @@map("decision_tags")
}

// ============================================
// HISTORIQUE DES DÉCISIONS
// ============================================

model DecisionLog {
  id          String   @id @default(cuid())
  decisionId  String
  eventType   String   // CREATED, STATUS_CHANGED, TITLE_UPDATED, etc.

  // Acteur (celui qui fait l'action)
  actorId     String?  // userId de celui qui fait l'action (null pour système)
  actorName   String?  // Pour participants externes
  actorEmail  String?  // Pour participants externes

  // Détails de l'événement
  oldValue    String?  // Pour les modifications (ancienne valeur)
  newValue    String?  // Pour les modifications (nouvelle valeur)
  metadata    String?  // JSON pour infos supplémentaires

  createdAt   DateTime @default(now())

  // Relations
  decision Decision @relation(fields: [decisionId], references: [id], onDelete: Cascade)
  actor    User?    @relation(fields: [actorId], references: [id], onDelete: SetNull)

  @@map("decision_logs")
}
